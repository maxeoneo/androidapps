<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidlab.exercise4_1"
    android:versionCode="1"
    android:versionName="1.0">


    <!-- uses openGL -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- register permission for internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- register permission for reading contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="andoidlab.exercise4_1.permission.MAPS_RECEIVE" />

    <permission
        android:name="androidlab.exercise4_1.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- register library for google maps -->
        <uses-library android:name="com.google.android.maps" />

        <!-- register main activity -->
        <activity
            android:name="androidlab.exercise4_1.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- register add activity -->
        <activity
            android:name="androidlab.exercise4_1.AddActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="androidlab.exercise4_1.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- register edit activity -->
        <activity
            android:name="androidlab.exercise4_1.EditActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="androidlab.exercise4_1.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- register map activity -->
        <activity
            android:name="androidlab.exercise4_1.AddGpsWithMapActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="androidlab.exercise4_1.AddActivity" />
                <action android:name="androidlab.exercise4_1.EditActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!-- register the widget -->
        <receiver android:name="TodoWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <!-- register todo service -->
        <service android:name="androidlab.exercise4_1.TodoService" />

        <!-- register location service -->
        <service android:name="androidlab.exercise4_1.CheckLocationService" />

        <meta-data
            android:name="androidlab.exercise4_1.v2.API_KEY"
            android:value="AIzaSyCaooIOdq9IjzTZTIyt3Vmno7pTk7LZcnM" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


    </application>

</manifest>
